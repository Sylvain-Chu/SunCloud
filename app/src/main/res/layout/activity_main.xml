<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E3DC"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Affichage du logo -->
        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:contentDescription="Logo du projet"
            android:layout_marginBottom="16dp" />

        <!-- Affichage du nom du projet -->
        <TextView
            android:id="@+id/textProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SunCloud IoT"
            android:textColor="#20404C"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Champ pour saisir l'adresse IP -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#20404C"
            android:text="Adresse IP du serveur"/>
        <EditText
            android:id="@+id/etServerIP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#20404C"
            android:textColorHint="#85C9DB"
            android:hint="192.168.1.100"
            android:inputType="text"/>

        <!-- Champ pour saisir le port -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#20404C"
            android:text="Port du serveur"/>
        <EditText
            android:id="@+id/etServerPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#20404C"
            android:textColorHint="#85C9DB"
            android:hint="10000"
            android:text="10000"
            android:inputType="number"/>

        <TextView
            android:id="@+id/textViewOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#20404C"
            android:text="Choisissez l'ordre d'affichage"
            android:layout_marginTop="16dp" />

        <!-- RecyclerView pour le drag-and-drop -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:layout_marginBottom="16dp"
            android:scrollbars="vertical" />

        <!-- Ajout des TextView pour afficher les données reçues -->
        <TextView
            android:id="@+id/tvReceivedDataLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Données reçues du serveur :"
            android:textColor="#20404C"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvDataDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#20404C"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:minHeight="100dp"
            android:backgroundTint="#85C9DB"/>

        <Button
            android:id="@+id/btnSendConfig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Envoyer la configuration"
            android:backgroundTint="#E3AB11"
            android:textColor="#20404C"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>
</ScrollView>
